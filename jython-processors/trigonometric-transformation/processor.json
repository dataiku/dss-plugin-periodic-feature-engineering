{
    "meta": {
        "label": "Extract features from a periodic column",
        "description": "Extract features from a periodic column (day of week, latitude, ...) to compute its sinus, cosinus, tangent and argument values",
        "icon": "icon-circle-blank"
    },
    "mode": "ROW",
    "processorTags": [
        "MATH"
    ],
    "params": [
        {
            "name": "periodic_column",
            "label": "Periodic column",
            "type": "COLUMN",
            "mandatory": true,
            "allowedColumnTypes": [
                "tinyint",
                "smallint",
                "int",
                "bigint",
                "float",
                "double"
            ]
        },
        {
            "name": "period_min",
            "label":"Period min",
            "type": "DOUBLE",
            "defaultValue" : 0.0,
            "description": "Period minimum value"
        },
        {
            "name": "period_max",
            "label":"Period max",
            "type": "DOUBLE",
            "defaultValue" : 366.0,
            "description": "Period maximum value"
        }  
    ]
}